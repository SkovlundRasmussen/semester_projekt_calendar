<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <servlet>
        <servlet-name>Servlet</servlet-name>
        <servlet-class>Servlet.LoginServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Servlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

  <servlet>
        <servlet-name>CustomerServlet</servlet-name>
        <servlet-class>Servlet.CreateCustomerServlet</servlet-class>
      <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/create_customers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>Servlet.CreateUserServlet</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowCustomer</servlet-name>
        <servlet-class>Servlet.ShowCustomerServlet</servlet-class>
        <load-on-startup>4</load-on-startup>
    </servlet>


    <servlet-mapping>
        <servlet-name>ShowCustomer</servlet-name>
        <url-pattern>/show_customers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Appointment</servlet-name>
        <servlet-class>Servlet.CreateAppoitmentServlet</servlet-class>
        <load-on-startup>4</load-on-startup>
    </servlet>


    <servlet-mapping>
        <servlet-name>Appointment</servlet-name>
        <url-pattern>/appointment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowAppointment</servlet-name>
        <servlet-class>Servlet.ShowAppointmentServlet</servlet-class>
        <load-on-startup>6</load-on-startup>
    </servlet>


    <servlet-mapping>
        <servlet-name>ShowAppointment</servlet-name>
        <url-pattern>/show_appointment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditCustomer</servlet-name>
        <servlet-class>Servlet.EditCustomerServlet</servlet-class>
        <load-on-startup>4</load-on-startup>
    </servlet>


    <servlet-mapping>
        <servlet-name>EditCustomer</servlet-name>
        <url-pattern>/edit_customer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditUser</servlet-name>
        <servlet-class>Servlet.EditUserServlet</servlet-class>
        <load-on-startup>5</load-on-startup>
    </servlet>


    <servlet-mapping>
        <servlet-name>EditUser</servlet-name>
        <url-pattern>/edit_user</url-pattern>
    </servlet-mapping>

</web-app>